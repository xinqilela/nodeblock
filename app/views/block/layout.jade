extends ../layout

append css
	link(rel='stylesheet',href='/css/blog.css')
	link(rel='stylesheet',href='/components/font-awesome/css/font-awesome.css')
block main
	block header
		.blog-masthead
			.container
				nav.blog-nav.pull-left
					if pageName==='/posts'
						a.blog-nav-item.active(href="/") 首页
					else
						a.blog-nav-item(href="/") 首页
					if pageName=='/contact'
						a.blog-nav-item.active(href="/contact") 联系我们
					else
						a.blog-nav-item(href="/contact") 联系我们
					if pageName=='/about'
						.blog-nav-item.active(href="/about") 联系我们
					else
						a.blog-nav-item(href="/about") 关于
				form.navbar-form.pull-right(method="get",action="/posts/")
					input.form-control(type="text",name="keyword",placeholder="搜索...")
	.container
		.row
			.col-sm-8.blog-main
				!=messages()
				block content
			.col-sm-3.col-sm-offset-1.blog-sidebar
				.sidebar-module
					h4 文章分类
					ol.list-unstyled
						each category in categories
							li
								a(href="/posts/category/"+category.title)= category.title
				.sidebar-module
					h4 友情链接
					ol.list-unstyled
						li
							a(href="#") github
						li
							a(href="#") twitter
						li
							a(href="#") facebook
	block footer
		footer.blog-footer
			p nodeblog by xinqilela.com
			p
				a(href="#") 回到顶部
				&nbsp;&nbsp;
				a(href="/admin/users/login") 用户登陆
				&nbsp;&nbsp;
				a(href="/admin/users/register") 用户注册