extends ../layout

block content
    h2.page-header 添加分类

    if errors && errors.length
        div.errors
            each error in errors
                p.alert.alert-danger= error.msg

    form.vertical-form(method="post",action=action)
        div.form-group
            label(for="title") 名称
            input.form-control.input-lg(name="title",required="true",placeholder="请输入分类名称",value=category.title)
        button.btn.btn-lg.btn-info(type="submit")= category._id ? "保存修改" : "添加"